{
	"compileOnSave": false,
	"compilerOptions": {
		"outDir": "dist",
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"declaration": false,
		"noImplicitReturns": true,
		"noImplicitAny": true,
		"noFallthroughCasesInSwitch": true,
		"allowUnreachableCode": false,
		"skipLibCheck": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"strictNullChecks": true,
		"importHelpers": true,
		"lib": [
			"es5",
			"es6"
		],
		"typeRoots": [
			"node_modules/@types"
		]
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}